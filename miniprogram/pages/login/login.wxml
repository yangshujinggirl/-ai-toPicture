<!--index.wxml-->
<view class="container">
    <image class="logo-img" mode="scaleToFill" src="../../assets/logo.png"></image>
    <view wx:if="{{isUsePassword}}">
      <input class="weui-input"  type="text" bindinput="bindKeyPhone"  placeholder="请输入手机号"  model:value="{{account}}"/>
      <input class="weui-input"  password type="text" bindinput="bindKeyPassword"  placeholder="请输入密码"  model:value="{{password}}"/>
      <button class="btn2" bindtap="handleLogin">登录</button>
      <view class="bottom-handle">
        <text bindtap="handleAutoPhone">一键登录</text>
        <text bindtap="goRegister">注册账号</text>
      </view>
    </view>
    <view wx:else>
      <button class="btn1" open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">微信一键登录</button>
      <button  class="btn2" bindtap="getUsePassword"> 手机号码登录 </button>
    </view>
</view>
